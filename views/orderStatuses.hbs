{{!-- Create a table --}}

<table>
    {{!-- For just the first row, we print each key of the row object as a header cell so we
    know what each column means when the page renders --}}
    <tr>
        <th>Order Status</th>
        <th>Description</th>
    </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the information in order --}}
        {{#each data}}
        <tr>
            <td>{{this.orderstatus_id}}</td>
            <td>{{this.description}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<!-- /views/index.hbs -->

<br></br>
{{!-- Form to add a record to the table --}}
<form id="add-orderStatus-form-ajax">
    <fieldset>
        <legend>Add Order Status</legend>
        <p>To add new order status , please enter their information below and click 'Submit'!</p>
        <label for="input-orderStatus">Order Status: </label>
        <input type="text" name="input-orderStatus" id="input-orderStatus">

        <label for="input-description-o">Description: </label>
        <input type="text" name="input-description-o" id="input-description-o">

        <input type="submit">
    </fieldset>
</form>

<br>
<form id="update-orderStatus-form-ajax">
    <fieldset>
    <legend>Update a Product</legend>
    <p>Use the following fields to update a product information.</p>
    <label for="input-update-orderStatus">Order Status </label>
        <select name="input-update-orderStatus" id="select-update-orderStatus">
            <option value="">Select an Order Status</option>
            {{#each data}}
            <option value="{{this.orderstatus_id}}">{{this.orderstatus_id}}</option>
            {{/each}}
        </select>
</select>


{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_orderStatus.js"></script>