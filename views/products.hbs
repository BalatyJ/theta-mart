{{! Header section }}

<form id="search-product-html" method="GET" action="/products">
  <div class="textbox-label">SEARCH PRODUCTS</div>
  <input
    type="text"
    name="name"
    id="input-name-html-search"
    placeholder="Type Product Name..."
    class="textbox"
  />
  <input type="submit" />
  <a href="/products"><button>Reset</button></a>
</form>
<br />

<table id="product-table" class="main-table">
  {{! For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders }}
  <thead>
    <tr>
      <th>Product ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Stock</th>
    </tr>
  </thead>

  {{! Body section }}
  <tbody>

    {{! For each row, print the information in order }}
    {{#each data}}
      <tr data-value="{{this.product_id}}">
        <td>{{this.product_id}}</td>
        <td>{{this.name}}</td>
        <td>{{this.description}}</td>
        <td>{{this.price}}</td>
        <td>{{this.stock}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

<!-- /views/index.hbs -->

{{! Form to add a record to the table }}
<div class="title">
  <h4 class="table-title">CREATE PRODUCT</h4>
  <form id="add-product-form-ajax">
    <table class="sub-table-style">
      <tr>
        <td><label for="input-name">Product Name:</label></td>
        <td><input type="text" name="input-name" id="input-name" /></td>
      </tr>

      <tr>
        <td><label for="input-description">Description:</label></td>
        <td><input
            type="text"
            name="input-description"
            id="input-description"
          /></td>
      </tr>
      <tr>
        <td><label for="input-price">Price:</label></td>
        <td><input
            type="number"
            min="0.00"
            max="999999.99"
            step="0.01"
            name="input-price"
            id="input-price"
          /></td>
      </tr>
      <tr>
        <td><label for="input-stock">Stock:</label></td>
        <td><input type="number" name="input-stock" id="input-stock" /></td>
      </tr>
    </table>
    <div class="button-style">
      <td><input type="submit" /></td>
    </div>

  </form>
</div>
<br />

<div class="title">
    <h4 class="table-title">UPDATE PRODUCT</h4>
    <form id="update-product-form-ajax">
    <table class="sub-table-style">
        <tr>
            <td><label for="input-product">Product Name: </label>
      <td><select name="input-product" id="input-updateproduct-p" required onclick="autofill()">
        <option value="">Select a Product</option>
        {{#each data}}
          <option value={{this.product_id}}>{{this.name}}</option>
        {{/each}}
    </select></td>

    </tr>
    <tr>
    <td><label for="input-description">Description: </label></td>
    <td><input
      type="text"
      name="input-description"
      id="input-updatedescription-p"
    /></td>

</tr>
<tr>
    <td><label for="input-price">Price: </label></td>
    <td><input
      type="number"
      min="0.00"
      max="999999.99"
      step="0.01"
      name="input-price"
      id="input-updateprice-p"
    /></td>      
    </tr>
    <tr>
    <td><label for="input-stock">Stock: </label></td>  
    <td><input type="number" name="input-stock" id="input-updatestock-p" /></td> 
    </tr>
    </table>
    <div class="button-style">
    <td><input type="submit"></td>
    </div>

</form>
</div>

